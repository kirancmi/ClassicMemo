<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_layout_bkgnd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="top"
    tools:context=".NotesList" >
    
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="460dip"
            android:background="@drawable/note_content_bkgnd"
            android:gravity="top|left" >

			 <ListView
		        android:id="@+id/lvNotes"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:cacheColorHint="#00000000"
		        android:layout_marginLeft="36dip"
		        android:layout_marginTop="64dip"
		        android:layout_marginRight="36dip"
		        android:layout_marginBottom="64dip"
		        android:paddingLeft="06dip"
		        android:paddingTop="06dip"
                android:paddingRight="06dip"
                android:paddingBottom="06dip"
		        android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical">
		 	</ListView>

        </LinearLayout>
        
		
</RelativeLayout>